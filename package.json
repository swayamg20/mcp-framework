{
  "name": "@sg20/mcp-oauth-framework",
  "version": "0.1.1",
  "description": "OAuth authentication framework for MCP (Model Context Protocol) servers - the Rails for MCP OAuth",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth/index.js",
      "types": "./dist/auth/index.d.ts"
    },
    "./base": {
      "import": "./dist/base/index.js",
      "types": "./dist/base/index.d.ts"
    },
    "./shared": {
      "import": "./dist/shared/index.js",
      "types": "./dist/shared/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "echo \"Tests coming soon\" && exit 0",
    "lint": "echo \"Linting coming soon\" && exit 0",
    "security-audit": "npm audit --audit-level moderate",
    "type-check": "tsc --noEmit",
    "validate-exports": "node -e \"import('./dist/index.js').then(() => import('./dist/auth/index.js')).then(() => import('./dist/base/index.js')).then(() => console.log('✅ All exports valid')).catch(e => { console.error('❌ Export validation failed:', e.message); process.exit(1); })\""
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mcp",
    "oauth",
    "authentication",
    "model-context-protocol",
    "ai",
    "llm",
    "framework",
    "oauth2",
    "pkce",
    "github",
    "google",
    "microsoft"
  ],
  "author": "Swayam Gupta <gupta.swayam123@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/swayamg20/mcp-framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swayamg20/mcp-framework.git"
  },
  "bugs": {
    "url": "https://github.com/swayamg20/mcp-framework/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "express": "^4.18.2",
    "open": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.1.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}